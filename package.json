{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub Actions TypeScript template",
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "homepage": "https://github.com/actions/typescript-action",
  "bugs": {
    "url": "https://github.com/actions/typescript-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "license": "MIT",
  "author": "",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "all": "npm run test && npm run coverage && npm run package",
    "biome": "npx biome",
    "bundle": "npm run biome check && npm run package",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "package": "npm run package:main && npm run package:post",
    "package:main": "npx ncc build src/main.ts -o dist/main --source-map --license licenses.txt && cp src/connect-with-port-forwarding.sh dist/main/connect-with-port-forwarding.sh",
    "package:post": "npx ncc build src/post.ts -o dist/post --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@aws-sdk/client-ssm": "^3.812.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@vercel/ncc": "^0.38.4",
    "jest": "^29.7.0",
    "lefthook": "^1.10.10",
    "make-coverage-badge": "^1.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  }
}
